{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":enablePreCommit",
    "schedule:automergeDaily",
    "schedule:weekends"
  ],
  "prConcurrentLimit": 5,
  "automergeType": "pr",
  "automergeMajor": false,
  "automerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^(group_vars|host_vars)/.+?$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>.*?))?\\n(?<roleName>\\S+?)_version:\\s+\"?'?(?<currentValue>[^\"'@\\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\"?'?"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/|\\.)([Dd]ocker|[Cc]ontainer)file$",
        "(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=\"(?<currentValue>.*)\"\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Makefile$", "^.gitpod.yml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( registryUrl=(?<registryUrl>.*?))?( versioning=(?<versioning>.*?))?\\s+.*?_VERSION\\s*:*\\??=\\s*(?<currentValue>.+)\\s"
      ]
    }
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["gomod", "npm", "dockerfile"]
    },
    {
      "matchManagers": ["woodpecker"],
      "addLabels": ["build"]
    },
    {
      "groupName": "golang deps non-major",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "extends": ["schedule:daily"]
    },
    {
      "groupName": "pre-commit non-major",
      "matchManagers": ["pre-commit"],
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["build"]
    },
    {
      "matchManagers": ["custom.regex", "ansible"],
      "matchFileNames": ["/^(roles/group_vars|host_vars)/.+?$/"],
      "automerge": false,
      "prBodyNotes": [
        ":warning: **Manual Steps required**",
        "Remember to always deploy the updated dependencies after merging the PR by running `./ansible.sh`."
      ]
    }
  ],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "vulnerabilityAlerts": {
    "labels": ["security"]
  }
}
